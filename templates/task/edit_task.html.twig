{% extends 'base.html.twig' %}

{% block header_title %} <h1 class="text-center">Modifier {{ task.title }}</h1>  {% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3">

            <div class="row">
                <a class="btn btn-success pull-left" href="{{ path('tasks_list') }}" style="margin-bottom: 20px">
                    Retour
                </a>
            </div>

            {{ form_start(form) }}
            {{ form_errors(form) }}

            {% include '/form/form_errors.html.twig' %}

                {{ form_label(form.title, 'Titre') }}
                {{ form_widget(form.title, {'attr': {
                    'class': 'form-control'
                }}) }}

                {{ form_label(form.title, 'Description') }}
                {{ form_widget(form.content, {'attr': {
                    'class': 'form-control',
                    'rows': 5
                }}) }}

            {{ form_rest(form) }}

            <button type="submit" class="btn btn-success pull-right">Modifier</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
