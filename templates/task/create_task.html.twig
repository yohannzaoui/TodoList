{% extends 'base.html.twig' %}

{% block header_img %}{% endblock %}

{% block body %}
    <a href="{{ path('task_list') }}" class="btn btn-primary pull-right">Retour à la liste des tâches</a>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3">
            {{ form_start(form) }}

            {% include '/form/form_errors.html.twig' %}

                {{ form_label(form.title, 'Titre') }}
                {{ form_widget(form.title, {'attr': {
                    'class': 'form-control'
                }}) }}

                {{ form_label(form.title, 'Description') }}
                {{ form_widget(form.content, {'attr': {
                    'class': 'form-control',
                    'rows': 5
                }}) }}

            {{ form_rest(form) }}

            <button type="submit" class="btn btn-success pull-right">Ajouter</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
